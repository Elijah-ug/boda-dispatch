generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rider {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  earnings       String
  user           String   @unique
  riderId        String
  completedTrips String
  totalTrips     String
  isRegistered   Boolean
}

model Client {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  balance        String
  user           String   @unique
  clientId       String
  isRegistered   Boolean
  hasSomeBalance Boolean
}

model Trip {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  fare        String
  rider       String?
  client      String
  distance    String
  tripId      String   @unique
  isAccepted  Boolean
  tripStarted Boolean
  isCompleted Boolean
  isPaidOut   Boolean
  pickup      String
  destination String
}

model Transaction {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  txHash    String
  gasUsed   String
  to        String
  from      String
}
