generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model rider {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  riderId      Int
  user         String
  earnings     Int
  stars        Int
  totalTrips   Boolean
  isRegistered Boolean
}

model client {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  balance        Int
  user           String
  clientId       String
  isRegistered   Boolean
  hasSomeBalance Boolean
}

model trip {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  balance        Int
  user           String
  clientId       String
  isRegistered   Boolean
  hasSomeBalance Boolean
}
