generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rider {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  earnings       String
  user           String?  @unique
  riderId        String
  completedTrips String
  totalTrips     String
  isRegistered   Boolean
  trip           trip[]
}

model Client {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  balance        String
  user           String?  @unique
  clientId       String
  isRegistered   Boolean
  hasSomeBalance Boolean
  trip           trip[]
}

model trip {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  fare        String
  charges     String
  rider       Rider    @relation(fields: [rId], references: [id])
  client      Client   @relation(fields: [cId], references: [id])
  distance    String
  tripId      String
  tripStarted Boolean
  isCompleted Boolean
  IsPainOut   Boolean
  pickup      String?
  destination String?
  cId         Int      @unique
  rId         Int      @unique
  // relational
}

model Transaction {
  id         Int    @id @default(autoincrement())
  createdAt DateTime
  txHash     String
  gasUsed  String
  to         String
  from       String
}
